<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_for(current_user.following_relationships.find_by(follower_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follower_id, user.id %>
      <%= f.submit User.human_attribute_name(:unfollow) %>
    <% end %>
  <% else %>
    <%= form_for(current_user.following_relationships.build) do |f| %>
      <%= hidden_field_tag :follower_id, user.id %>
      <%= f.submit User.human_attribute_name(:follow) %>
    <% end %>
  <% end %>
<% end %>
